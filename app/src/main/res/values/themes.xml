<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NentoPOS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/montserrat</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DropDown_PowerSpinner">
        <item name="android:windowEnterAnimation">@anim/show_down_center</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Elastic_PowerSpinner">
        <item name="android:windowEnterAnimation">@anim/elastic_down</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Fade_PowerSpinner">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>