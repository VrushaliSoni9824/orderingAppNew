<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/sr_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="John Walker"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/waiting_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="2:30:00"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/quoted_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="1 Hr 35 Min"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/customer_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="NA"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <ImageView
        android:id="@+id/send_notification"
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_wifi" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" >

        <com.skydoves.powerspinner.PowerSpinnerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_reservation_ed"
            android:background="@drawable/text_view_bg"
            android:gravity="start|center"
            android:hint="VIP"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_light"
            android:textSize="22sp"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_arrow_tint="@color/black"
            app:spinner_divider_color="@color/light_grey"
            app:spinner_divider_show="true"
            app:spinner_divider_size="0.4dp"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="@color/light_bg"
            app:spinner_popup_elevation="14dp" />



    </LinearLayout>

    <TextView
        android:id="@+id/waiting_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="Added"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_waiting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_eye"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/cancel_waiting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/image_bg"
            android:backgroundTint="@color/red"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />


    </LinearLayout>


</LinearLayout>