<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="36"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/order_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="May-03-2021 10:22"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />

    <TextView
        android:id="@+id/future_order_date"
        android:text="N/A"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text"
        android:gravity="center"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Dj"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/table_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/order_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Served"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/server_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Waiter Waiter"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/payment_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Paid"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/account_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="123456789"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />


    <TextView
        android:id="@+id/total_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="$ 440.50"
        android:textColor="@color/black"
        android:textSize="@dimen/all_order_header_text" />

    <GridLayout
        android:layout_gravity="center"
        android:columnCount="2"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content" >


        <ImageView
            android:id="@+id/print_invoice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_print"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/pos_invoice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_invoice"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/edit_order"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/procced_payment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/yellow_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_baseline_check_box_24"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/accept_order"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/green_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_baseline_done_24"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/cancel_order"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/red_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />

    </GridLayout>
    
</LinearLayout>