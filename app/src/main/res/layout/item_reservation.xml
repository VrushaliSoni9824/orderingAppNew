<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/sr_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="John Walker"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/table_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/party_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="12:30:00"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <TextView
        android:id="@+id/end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="13:30:00"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />

    <TextView
        android:id="@+id/reservation_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.8"
        android:gravity="center"
        android:text="12th July"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />

    <TextView
        android:id="@+id/reservation_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="Booked"
        android:textColor="@color/black"
        android:textSize="@dimen/waiting_text" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_reservation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/cancel_reservation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/image_bg"
            android:backgroundTint="@color/red"
            android:contentDescription="@string/todo"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />


    </LinearLayout>


</LinearLayout>