    <LinearLayout
        android:id="@+id/expandedListItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        app:cardElevation="@dimen/_3sdp"
        tools:ignore="MissingPrefix">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gray_border"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.95"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewOrderIcon123"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="0.2"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_item_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:orientation="vertical"
                    android:padding="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_onum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_hash_svgrepo_com"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="5468"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/txt_preorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/orange"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="Pre order"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/o_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_notifications_none_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="Pick Up"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/o_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_access_time_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="14:36 - 2021-12-01"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/o_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="Marko Niemi"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical"
                    android:padding="@dimen/_4sdp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/OrderTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|top"
                        android:text="320.00kr"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_5sdp"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="SET Time"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnPickUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black_border"
                android:gravity="center"
                android:text="Complete the order"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="@drawable/bg_grey_bottom_round_corner"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewNewOrder"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_new_item" />

            <ImageView
                android:id="@+id/imageViewNewOrder2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_new_item"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageViewDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_circle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageViewOrderIcon"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:layout_weight="0.2"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_item_logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:id="@+id/txt_onum123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_hash_svgrepo_com"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="5468"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/o_status123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_notifications_none_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Pick Up"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/o_time123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="14:36 - 2021-12-01"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/o_customer123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Marko Niemi"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center|top"
                    android:text="320.00kr"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_5sdp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="SET Time"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </LinearLayout>

        <!-- <TextView
             android:id="@+id/expandedListItem"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
             android:paddingTop="10dp"
             android:paddingBottom="10dp" />
    -->
    </LinearLayout>


</LinearLayout>
